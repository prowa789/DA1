<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/styles/checkout.css">
    <link rel="stylesheet" href="/styles/product.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script type="text/javascript" src="/styles/product.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>
    <%- include('navbarProduct'); -%>
    <div class="container">
      <br>  
      <h1 class="mr-2 mb-1" style="display: inline;">Giỏ hàng</h1>      
        <br><br><br>
        <table class="table">
            <thead>
                <tr>
                  <th scope="col" id="stt">STT</th>
                  <th scope="col" id="image">Image</th>
                  <th scope="col" id="name">Name</th>
                  <th scope="col" id="price">Price</th>
                  <th scope="col">So luong</th>
                </tr>
              </thead>
            <% for(var i=0;i < product.length;i++){ %>
                <tr>
                    <td scope="col" id="stt"><%= i+1 %></td>
                    <td scope="col" id="image"><img src="<%=product[i].image%>" alt=""></td>
                    <td scope="col" id="name"><%= product[i].name %></td>
                    <td scope="col" id="price"><%= product[i].price %> $</td>
                    <td scope="col">
                      <a href="/cart/substract/<%= product[i].productId %>" class="btn btn-success">-</a>
                      <strong><%= product[i].numberOfItem%></strong>
                      <a href="/cart/add/<%= product[i].productId %>" class="btn btn-success">+</a>
                    </td>
                    
                </tr>
            <% } %>
        </table>
        <p style="font-weight: bold;float: right;font-size: large;">Total: <%=sum%> $</p>
    </div>
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>