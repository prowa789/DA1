<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%=dienthoai[0].name%></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" href="/images/favicon.ico">
</head>

<body>
    <%- include('header'); -%>
    <!-- xem sản phẩm-->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li><a href="/">Trang chủ</a></li>
                            <li><a href="/dienthoai">Điện thoại</a></li>
                            <li><a href="/dienthoai/<%=dienthoai[0].phone_id%>"><%=dienthoai[0].name%></a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="background-color: #fff;margin-top: 10px;">
        <div class="row info-san-pham">
            <div class="col-sm-5">
                <img src="<%=dienthoai[0].hinh_anh%>" alt="">
            </div>
            <div class="col-sm-7">
                <h3 class="ten-san-pham">
                    <%=dienthoai[0].name%>
                </h3>
                <div class="gia-tien">
                    <%=dienthoai[0].gia_hien_thi%>
                </div>
                <div class="promotion">
                    <small><%=dienthoai[0].promotion%></small>
                </div>
                <a href="/giohang/add/<%=dienthoai[0].phone_id%>" class="btn btn-success">Thêm vào giỏ hàng</a>
            </div>
        </div>
        <div class="row">
            <div class="chi-tiet-san-pham">
                <h3>Chi tiết sản phẩm</h3>
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="cot1" style="color: black;">Màn hình</td>
                            <td><%=dienthoai[0].man_hinh%></td>
                        </tr>
                        <tr>
                            <td class="cot1" style="padding-left: 3rem;color: black;">Hệ điều hành</td>
                            <td><%=dienthoai[0].he_dieu_hanh%></td>
                        </tr>
                        <tr>
                            <td class="cot1" style="padding-left: 3rem;color: black;">Camera sau</td>
                            <td><%=dienthoai[0].camera_sau%></td>
                        </tr>
                        <tr>
                            <td style="padding-left: 3rem;color: black;">Camera trước</td>
                            <td><%=dienthoai[0].camera_truoc%></td>
                        </tr>
                        <tr>
                            <td style="padding-left: 3rem;color: black;">CPU</td>
                            <td><%=dienthoai[0].cpu%></td>
                        </tr>
                        <tr>
                            <td style="padding-left: 3rem;color: black;">RAM</td>
                            <td><%=dienthoai[0].ram%></td>
                        </tr>
                        <tr>
                            <td style="padding-left: 3rem;color: black;">Bộ nhớ trong</td>
                            <td><%=dienthoai[0].bo_nho_trong%></td>
                        </tr>
                        <tr>
                            <td style="padding-left: 3rem;color: black;">Thẻ sim</td>
                            <td><%=dienthoai[0].the_sim%></td>
                        </tr>
                        <tr>
                            <td style="padding-left: 3rem;color: black;">Dung lượng pin</td>
                            <td><%=dienthoai[0].dung_luong_pin%></td>
                        </tr>

                    </tbody>
                </table>

            </div>
        </div>
        <div class="row binhluan">
            <h3>Leave a reply</h3>
            <form action="/dienthoai/<%= dienthoai[0].phone_id%> " method="POST">
                <div class="form-group">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4">
                                <label for="">Họ tên</label>
                                <input type="text" class="form-control input-bl" name="ho_ten" required>
                            </div>
                            <div class="col-sm-4">
                                <label for="">Email</label>
                                <input type="email" class="form-control input-bl" name="email" required>
                            </div>
                            <div class="col-sm-4">
                                <label for="">SĐT</label>
                                <input type="text" class="form-control input-bl" name="sdt" required>
                            </div>
                            <div class="col-sm-6">
                                <label for="">Viết bình luận</label>
                                <textarea style="display:block;margin-bottom:20px" class="form-control" name="noi_dung" rows="5" cols="" required></textarea>
                                <button type="submit" class="btn btn-success" style="margin-bottom:20px">Gửi</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="row" style="color: black;margin-bottom: 20px;">
            <h3 style="border-bottom:1px solid black;padding-left: 20px;">Đánh giá</h3>
        </div>
        <% if(binhluan){ %>
        <% for(var i=0;i<binhluan.length;i++){ %>
        <div class="row danhgia">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong><%= binhluan[i].ho_ten %></strong>
                        <span class="text-muted">
                            &#160
                            <%= binhluan[i].ngay_gio.getHours() %> :
                            <%= binhluan[i].ngay_gio.getMinutes() %>&#160 -
                            <%= binhluan[i].ngay_gio.getDate() %> /
                            <%= binhluan[i].ngay_gio.getMonth() + 1%> /
                            <%= binhluan[i].ngay_gio.getFullYear()%>
                        </span>
                    </div>
                    <div class="panel-body">
                        <%= binhluan[i].noi_dung %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <% } %>
    </div>
    </div>
    <!-- footer -->
    <%- include('footer'); -%>
    <!-- end footer -->
    <script src="/js/menumaker.js" type="text/javascript"></script>
</body>

</html>